<body>
    <div class="container">
        <div id="name-input-section" class="display-block">
            <h1>Diwali Celebrations Await!</h1>
            <p>Enter your name for a festive greeting:</p>
            <input type="text" id="name-input" placeholder="Your Name">
            <button onclick="showGreeting()">Light the Diyas</button>
        </div>

        <div id="greeting-container" class="hidden">
            <h2>Happy Diwali, <span id="name-placeholder">[Name]</span>!</h2>
            <p id="personalized-message"></p>
        </div>
    </div>

    <!-- Code made by Nipurn Agarwal -->
    <div id="credit">Code made by Nipurn Agarwal</div>

    <script>
        function showGreeting() {
            document.getElementById('name-input-section').classList.add('hidden');
            setTimeout(function() {
                var name = document.getElementById('name-input').value || 'Friend';
                var message = generatePersonalizedMessage(name);
                document.getElementById('name-placeholder').textContent = name;
                document.getElementById('personalized-message').textContent = message;
                document.getElementById('greeting-container').classList.remove('hidden');
                document.getElementById('greeting-container').classList.add('display-block');
            }, 500);
        }

        function generatePersonalizedMessage(name) {
            var hour = new Date().getHours();
            if (hour < 12) {
                return `Good morning, ${name}! Wishing you a day filled with joy and prosperity.`;
            } else if (hour < 18) {
                return `Good afternoon, ${name}! May this Diwali light up your life with happiness.`;
            } else {
                return `Good evening, ${name}! Enjoy the festive glow of Diwali.`;
            }
        }
    </script>
